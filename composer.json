{
    "name": "mcg-web/promise-factory",
    "description": "This library tries to create a simple promise factory standard while waiting for a psr.",
    "type": "library",
    "keywords": ["promise", "factory", "guzzle", "react"],
    "autoload": {
        "psr-4": {
            "McGWeb\\PromiseFactory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "McGWeb\\PromiseFactory\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^5.5|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.1|^5.6",
        "webonyx/graphql-php": "dev-master",
        "react/promise": "^2.4",
        "guzzlehttp/promises": "^1.3"
    },
    "suggest": {
        "react/promise": "To use ReactPhp promise factory",
        "guzzlehttp/promises": "To use Guzzle promise factory",
        "webonyx/graphql-php": "To use webonyx graphql promise factory"
    },
    "license": "MIT"
}
